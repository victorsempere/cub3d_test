    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Test cub3d",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Launch docker compose (wait)",
            "program": "./data/bin/raycaster_test",
            "args": [],
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerServerAddress": "localhost:9091",
            "miDebuggerArgs": "-d ${workspaceFolder}/data/",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Attach to debugger",
            "type": "cppdbg",
            "request": "launch",
            "program": "./data/bin/a.out",
            "args": [],
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerServerAddress": "localhost:9091",
            "miDebuggerArgs": "-d ${workspaceFolder}/data/",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}